<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundotelalogin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="snackapp.com.br.snackapp.MainActivity">


    <LinearLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/fundoll"
        android:orientation="vertical"
        android:textAlignment="center">

        <!-- Texto e logo-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:background="@drawable/menulanchonetelogo"
            android:gravity="center"
            android:text="MENU LANCHONETE"
            android:textAlignment="textStart"
            android:textColor="#ffffff"
            android:textSize="29dp"
            android:textStyle="bold|italic" />


        <!-- Texto Cardapio-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f22a00"
            android:gravity="center"
            android:text="@string/txtCardapio"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:textStyle="bold|italic" />

        <RelativeLayout
            android:layout_width="290dp"
            android:layout_height="320dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp">


            <ListView
                android:id="@+id/listP"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="70dp"
                android:textAlignment="center" />

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
