<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fundotelalogin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="75px"
           android:layout_gravity="center"
           >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textAlignment="center"
               android:layout_gravity="center"

               android:background="@drawable/fundoll"
               android:orientation="vertical">


               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="45dp"
                   android:textAlignment="textStart"
                   android:gravity="center"
                   android:text="REALIZAR PEDIDO"
                   android:textSize="0.19in"
                   android:textColor="#ffffff"
                   android:background="@drawable/logorealizarpedido"
                   android:textStyle="bold|italic"/>

               <View
                   android:layout_width="0.2in"
                   android:layout_height="0.1in"/>



                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Selecionar Campus"
                       android:textAlignment="center"
                       android:textColor="#000000"
                       android:textSize="0.155in"
                       android:background="#FAFAFA"/>


               <ScrollView
                   android:layout_width="match_parent"
                   android:layout_height="0.8in">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical">

                       <RadioButton
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Item 1"
                           android:textColor="#DCDCDC"
                           android:textSize="0.15in"
                           android:background="#fffffc"/>

                       <RadioButton
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Item 2"
                           android:textColor="#c0c0c0"
                           android:textSize="0.15in"
                           android:background="#DCDCDC"/>
                       <RadioButton
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Item 3"
                           android:textColor="#DCDCDC"
                           android:textSize="0.15in"
                           android:background="#fffffc"/>
                       <RadioButton
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Item 4"
                           android:textColor="#c0c0c0"
                           android:textSize="0.15in"
                           android:background="#dcdcdc"/>





                   </LinearLayout>








               </ScrollView>





               <View
                   android:layout_width="0.2in"
                   android:layout_height="0.1in"/>



               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Selecionar Lanchonete"
                   android:textAlignment="center"
                   android:textColor="#000000"
                   android:textSize="0.156in"
                   android:background="#FAFAFA"/>


               <ScrollView
                   android:layout_width="match_parent"
                   android:layout_height="0.8in">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical">

                       <RadioButton
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Item 1"
                           android:textColor="#DCDCDC"
                           android:textSize="0.15in"
                           android:background="#fffffc"/>

                       <RadioButton
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Item 2"
                           android:textColor="#c0c0c0"
                           android:textSize="0.15in"
                           android:background="#DCDCDC"/>
                       <RadioButton
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Item 3"
                           android:textColor="#DCDCDC"
                           android:textSize="0.15in"
                           android:background="#fffffc"/>
                       <RadioButton
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="Item 4"
                           android:textColor="#c0c0c0"
                           android:textSize="0.15in"
                           android:background="#dcdcdc"/>





                   </LinearLayout>








               </ScrollView>

               <View
                   android:layout_width="1px"
                   android:layout_height="10dp"/>


               <Button
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="#00FF00"
                   android:textColor="#ffffff"
                   android:textStyle="bold"
                   android:textSize="0.2in"
                   android:layout_marginLeft="109dp"
                   android:onClick="proximo"
                   android:text="@string/BtnProximo"/>



               </LinearLayout>







           </LinearLayout>





</RelativeLayout>
